<div class="container">
    <%if @cards.count < 1%>
        <h1>You don't have any cards added to your account</h1>
    <%else%>
        <% @cards.each do |card| %>
            <div class="card mb-3">
                <div class="card-body  d-flex justify-content-around">
                    <div>
                        <strong>Card Number</strong><br />
                        <%= card.card_number%>
                    </div>
                    <div>
                        <strong>Name</strong><br />
                        <%= card.card_holder_name%>
                    </div>
                    <div>
                        <strong>Expiry</strong> <br />
                        <%= card.expiry%>
                    </div>
                    <div>
                        <a class="btn btn-danger" data-method="delete" href="/card/delete/<%=card.id %>" ><i class="bi bi-trash"></i></a>
                        <a class="btn btn-warning" href="/card/edit/<%=card.id %>"><i class="bi bi-pencil-fill"></i></a>
                    </div>
                </div>
            </div>
        <%end%>
    <%end%>
    <%= paginate @cards%>
</div>