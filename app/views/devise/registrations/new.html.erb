<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  

  <div class="mb-3">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class:"form-control" %>
    <div class="text-danger">
        <% if @user.errors[:username].any? %>
        <ul>
            <% @user.errors[:username].each do |error|%>
                <li><%= "Username " + error%></li>
            <%end%>
        </ul>
        <%end%>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control"%>
    <div class="text-danger">
        <% if @user.errors[:name].any? %>
        <ul>
            <% @user.errors[:name].each do |error|%>
               <li> <%= "Name " + error%></li>
            <%end%>
        </ul>
        <%end%>
    </div>
  </div>
  
  <div class="mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control"%>
    <div class="text-danger">
        <% if @user.errors[:email].any? %>
          <ul>
            <% @user.errors[:email].each do |error|%>
                <li><%= "Email "+error%></li>
            <%end%>
          </ul>
        <%end%>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile, autofocus: true, class:"form-control" %>
    <div class="text-danger">
        <% if @user.errors[:mobile].any? %>
          <ul>
            <% @user.errors[:mobile].each do |error|%>
                <li><%= error%></li>
            <%end%>
          </ul>
        <%end%>
    </div>
  </div>

  

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,class: "form-control" %>
    <div class="text-danger">
        <% if @user.errors[:password].any? %>
          <ul>
            <% @user.errors[:password].each do |error|%>
                <li><%= error%></li>
            <%end%>
          </ul>
        <%end%>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,class: "form-control" %>
    <div class="text-danger">
        <% if @user.errors[:password_confirmation].any? %>
          <ul>
            <% @user.errors[:password_confirmation].each do |error|%>
                <li><%= error%></li>
            <%end%>
          <ul>
        <%end%>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links", class:"link-primary" %>
