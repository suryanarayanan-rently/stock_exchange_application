<div class="container">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label :password, "New password" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Change my password", class:"btn btn-success w-100" %>
    </div>
  <% end %>
  <div class="d-flex justify-content-between ">
    <%= link_to "Sign up", new_registration_path(resource_name),class: "nav-link" %>
    <%= link_to "Log in", new_session_path(resource_name), class: "nav-link" %>
  </div>
</div>