<div class="container">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3 mt-5">
      <%= f.label :email%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Enter Your Email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success w-100"%>
    </div>
  <% end %>
  <%= render "devise/shared/custom_auth_links" %>
</div>