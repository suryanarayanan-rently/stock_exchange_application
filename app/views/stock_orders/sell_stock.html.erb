<div class="container">
<div class="row" >
<div class="col-lg-5 offset-lg-3 col-sm-12 col-md-12" style="border: 1px solid black;border-radius:10px;">
    <h3 class="text-center mt-3">Sell My Stock</h3>
<%= form_with model: @stock_order do |form|%>
    <div class="mb-3">
        <%= form.label :stock_symbol %>
        <%= form.collection_select :stock_symbol, Stock.all, :symbol, :name,{},{:class => "form-select"}%>
    </div>
    <div class="mb-3">
        <%= form.label :price%>
        <%= form.number_field :price, class: "form-control"%>
        <div>
            <%if @stock_order.errors[:price].any?%>
                <%@stock_order.errors[:price].each do |error|%>
                    <%= error %>
                <%end%>
            <%end%>
        </div>
    </div>
    <div class="mb-3">
        <%= form.submit "Sell My Holdings", class: "btn btn-primary btn-block w-100"%>
    </div>

<%end%>
</div>
</div>